generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Department {
  id      Int       @id @default(autoincrement())
  name    String
  program Program[]
}

model Program {
  id           Int        @id @default(autoincrement())
  name         String     @unique
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
  semesters    Semester[]
}

model Semester {
  id        Int       @id @default(autoincrement())
  number    Int
  programId Int
  program   Program   @relation(fields: [programId], references: [id])
  subjects  Subject[]
}

model Subject {
  id         Int      @id @default(autoincrement())
  name       String
  code       String?
  semesterId Int
  semester   Semester @relation(fields: [semesterId], references: [id])
  papers     Paper[]
}



model Paper {
  id         Int       @id @default(autoincrement())
  type       PaperType
  year       Int
  fileUrl    String
  subjectId  Int
  subject    Subject   @relation(fields: [subjectId], references: [id])
  
  uploadedBy Int?
  uploader   User?     @relation(fields: [uploadedBy], references: [id])
  
  isVerified Boolean   @default(false)  
  createdAt  DateTime  @default(now())
}


enum PaperType {
  END_SEM
  CIA_I
  CIA_II
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  papers    Paper[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  queries   Query[]    // User who asked the queries
  responses Query[]    @relation("AdminResponses") // Admin responses to user queries
}


enum Role {
  USER
  ADMIN
}

model Query {
  id           Int      @id @default(autoincrement())
  message      String
  userId       Int?
  user         User?    @relation(fields: [userId], references: [id])

  response     String?        // Admin's reply (nullable until replied)
  respondedAt  DateTime?      // When the admin responded
  adminId      Int?           // Admin who responded
  admin        User?          @relation("AdminResponses", fields: [adminId], references: [id])

  isResponded  Boolean  @default(false)
  createdAt    DateTime @default(now())
}




